@model List<EmployeeRateCard.Models.RateCardViewModel>
@{   
    ViewData["Title"] = "Rate Card";
}
<div class="text-center">
    <h1 class="display-4">Rate Card</h1>
    <table class="table table-bordered mt-4">
        <thead>
            <tr>

                <th>Id</th>
                <th>Job</th>
                <th>Dept</th>
                <th>Effective Start</th>
                <th>Effective End</th>
                <th>HourlyRate</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Job</td>
                    <td>@item.Dept</td>
                    <td>@item.EffectiveStart.ToString("MM/dd/yyyy")</td>
                    <td>@item.EffectiveEnd.ToString("MM/dd/yyyy")</td>
                    <td>@item.HourlyRate</td>
                </tr>
                
            }
        </tbody>
    </table>

</div>
